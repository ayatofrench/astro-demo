---
import Layout from "./Layout.astro";
import NotesFlyout from "../components/NotesFlayout.tsx";
import NotesFlyoutToggle from "../components/NotesFlyoutToggle.tsx";

export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
    <aside class="bg-gray-800 text-gray-300 hover:text-gray-300 active:text-gray-300">
        <div class="sticky text-sm">
            <h1 class="text-xl font-bold my-6 text-center">Astro.build Demo</h1>
            <h4 class="font-bold mt-4 text-base">Update Demo</h4>
            <hr class="h-px my-2 bg-gray-400 border-0">
            <ul>
                <li><a href="/update-demo">Update Demo</a></li>
            </ul>
            <h4 class="font-bold mt-4 text-base">React</h4>
            <hr class="h-px my-2 bg-gray-400 border-0">
            <ul>
                <li><a href="/nested-tabs">MUI tabs with nested Astro components</a></li>
            </ul>

            <h4 class="font-bold mt-4 text-base">Htmx</h4>
            <hr class="h-px my-2 bg-gray-400 border-0">
            <ul>
                <li><a href="/htmx">htmx with svelte ssr render</a></li>
            </ul>
            <NotesFlyoutToggle client:only="react" />
        </div>
    </aside>
    <main>
        <slot />
    </main>
    <NotesFlyout client:only="react" />
</Layout>
<style>
    aside {
        box-sizing: border-box;
        min-width: 250px;
        padding: 0 20px;
    }
    .sticky {
            position: sticky;
            top: 18px;
    }
    main {
        flex: 1 0 0;

        display: flex;
        align-items: stretch;
        align-content: stretch;
        flex-direction: column;
        background-color: #22222211;
    }
    .nav {
        list-style: none;
        margin: 0;
        padding: 0;
    }
    .nav .header {
        margin: 15px 0 5px 0;
    }
</style>
